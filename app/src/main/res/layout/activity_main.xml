<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/constraintLayoutMain">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/image_title_main"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp" android:layout_marginStart="40dp"
            android:layout_marginBottom="101dp" app:layout_constraintBottom_toTopOf="@+id/buttonTest"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTest"
            android:background="@drawable/image_button_test" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="26dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonEdit" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEdit"
            android:background="@drawable/image_button_edit" app:layout_constraintStart_toStartOf="@+id/buttonTest"
            app:layout_constraintTop_toBottomOf="@+id/buttonTest" android:layout_marginBottom="149dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:text="@string/change_color"
            android:textSize="10sp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/buttonEdit" android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="34dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button01" android:layout_weight="1"
                android:background="@color/color01"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button02" android:layout_weight="1"
                android:background="@color/color02"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button03" android:layout_weight="1"
                android:background="@color/color03"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button04" android:layout_weight="1"
                android:background="@color/color04"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button05" android:layout_weight="1"
                android:background="@color/color05"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button06" android:layout_weight="1"
                android:background="@color/color06"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>